{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es5",
    "allowJs": true,
    "baseUrl": ".",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
  },
  "include": [
    "./src",
    "./src/**/*.ts",
    "./declarations"
  ],
  "exclude": [
    "node_modules"
  ]
}
